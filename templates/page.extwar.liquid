<style>
input {position: absolute; opacity: 0; z-index: -1;}
.row {display: flex;}
.row .col {flex: 1;}
.row .col:last-child {margin-left: 1em;}
.tabs {border-radius: 8px; overflow: hidden; box-shadow: 0 4px 4px -2px rgba(0, 0, 0, 0.5);}
.tabbed {overflow: hidden;}
.tab {width: 100%; color: white; overflow: hidden;}
.tabber {width: 1005; overflow: hidden;}
.tab-label {display: flex; justify-content: space-between; padding: 1em;  background: #2c3e50; font-weight: bold; cursor: pointer; width:100%;}
.tab-label:hover {background: #1a252f;}
.tab-label::after {content: "❯"; width: 1em; height: 1em; text-align: center; transition: all 0.35s;float:right;}
.tab-content {max-height: 0; padding: 0 1em; color: #2c3e50; background: white; transition: all 0.35s;}
.tab-contents {max-height: 0; padding: 0 1em; color: #2c3e50; background: white; transition: all 0.35s;}
.tab-close { display: flex; justify-content: flex-end; padding: 1em; font-size: 0.75em; background: #2c3e50; cursor: pointer;}
.tab-close:hover { background: #1a252f;}
input:checked + .tab-label { background: #1a252f;}
input:checked + .tab-label::after { transform: rotate(90deg)!important;margin-top:3px;margin-right:-2px;}
input:checked ~ .tab-content { max-height: 100vh; padding: 1em;}
input:checked ~ .tab-contents {max-height: 1000vh;padding: 1em;}
#faqq, #iconsContainer {display:none;}
li {list-style: lower-alpha!important;margin-left: 20px;}
.IconBox {width: 23%; float: left; padding: 1% 2% 1% 0;}
.IconTxt {font-weight: 600; font-size: 15px; position: relative; top: -26px; left: 10px; display: inline-block; letter-spacing: -.2px; margin-right: -25px; color: #045ea9;}

.minititle{display: inline-block; vertical-align: middle; font-size:200%; padding-left:30px;max-width:65%;height:130px;margin-top:-30px;}
.WarrClaim {float: right; max-width: 30%;padding-left:30px;}
.MainBlock {text-align: start; overflow: hidden;}
.Icons {float: left;max-width:69%;}
.MobIcons {display:none;}
.TextBox {text-align: left; padding:20px 20px 0 20px;}
  
@media only screen and (max-width: 1205px) {
.IconBox {width:45%; float:left; padding:2%;}  
.IconBlock {width:100%;height:1px;float:right;}
}

@media only screen and (max-width: 700px) {
.minititle{font-size:180%;float:right;margin-top:-5px;}
.MainBlock {width:100%;}
.Icons {display:none;}
.MobIcons {display:block; margin-bottom:-10px;}
.WarrClaim {max-width:100%; margin-bottom:30px; padding:0} 
.tabs {margin:0 10px;}
.tab-label {border-bottom: solid 1px #000;}
.IconBox {width:95%; float:left; padding:2%;} 
.IconTxt {font-size: 17px;}
.IconBlock {height:10px;}
}

div.slideshow__text-wrap > div > div > ul > li:nth-child {list-style:none;}
